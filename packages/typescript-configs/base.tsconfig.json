{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2018", "ESNext.AsyncIterable"],
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
